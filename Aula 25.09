//Atividade 1

let numeroMaior = 0

for (let i = 0; i < 10; i++) {
    let numero = Number(prompt("digite um numero: "))
    while (numero <= 0){
        numero = Number(prompt("numero invalido, digite um numero: "))
    }
    if (numero > numeroMaior) {
        numeroMaior = numero
    }
}
alert("o numero maior é: " + numeroMaior)

